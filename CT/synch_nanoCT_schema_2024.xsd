				acquisitionScriptName

				largeFOV

				rotationStageAlignmentDone

				detectorAlignmentDone

				coordinateReference

				referenceImages

				effectivePixelSize

				numberOfProjections

				acquisitionTimePerProjection

				totalAcquisitionTime

